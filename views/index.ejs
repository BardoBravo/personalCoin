<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Test</title>
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>   
    </head>
    <body>
        <div class="container">
            <p>Tranfer Amount</p>
            <fieldset class="bit-pad">
                <form action="/temp" method ="post">
                    <input name="seller" type="text" class="ghost-input" placeholder="Enter User" required>
                    <input name="amount" type="text" class="ghost-input" placeholder="Enter Amount" required>
                    <input type="submit" class="ghost-button" value="Transfer">
                </form>
                <h3>Wallet Balance:</h3>
                <p>1000</p>
                <% if(weather !== null) { %>
                    <p><%= weather %></p>
                <% } %>

                <% if(error !== null) { %>
                    <p><%= error %></p>
                <% } %>
            </fieldset>
        </div>
    </body>
</html>